---
import MainLayout from "../layouts/MainLayout.astro";

// In a real app, these would come from a database or API
const testimonials = [
  {
    name: "Sarah Johnson",
    role: "Food Blogger",
    text: "This platform has completely changed how I discover new chickenburgers. The detailed rating system helps me make informed choices!",
    image: "https://i.pravatar.cc/150?img=1",
  },
  {
    name: "Mike Chen",
    role: "Food Enthusiast",
    text: "I love how easy it is to find new spots and share my experiences. The community here is amazing!",
    image: "https://i.pravatar.cc/150?img=2",
  },
  {
    name: "Emily Rodriguez",
    role: "Restaurant Owner",
    text: "As a restaurant owner, the feedback we get through this platform is invaluable. It helps us improve our menu constantly.",
    image: "https://i.pravatar.cc/150?img=3",
  },
];

const blogPosts = [
  {
    title: "Top 10 Chickenburger Spots in Downtown",
    excerpt:
      "Discover the hidden gems and popular favorites that serve the most delicious chickenburgers in the heart of the city.",
    date: "2024-04-05",
    readTime: "5 min read",
  },
  {
    title: "What Makes the Perfect Chickenburger?",
    excerpt:
      "From the bun to the sauce, we break down the essential elements that create the ultimate chickenburger experience.",
    date: "2024-04-03",
    readTime: "7 min read",
  },
  {
    title: "The History of Chickenburgers",
    excerpt:
      "Take a journey through time and learn about the fascinating evolution of this beloved comfort food.",
    date: "2024-04-01",
    readTime: "6 min read",
  },
];

const faqs = [
  {
    question: "How does the rating system work?",
    answer:
      "Our rating system uses a scale of 1-10 chickens, considering factors like taste, texture, presentation, and value for money. Users can also add detailed reviews and photos.",
  },
  {
    question: "Can I add a new chickenburger spot?",
    answer:
      "Yes! Simply click on the map where the restaurant is located, fill in the details, and submit. Our community moderators will verify the information.",
  },
  {
    question: "Are the ratings verified?",
    answer:
      "We use various verification methods to ensure ratings are genuine, including user authentication and photo verification.",
  },
  {
    question: "How can restaurant owners respond to reviews?",
    answer:
      "Restaurant owners can claim their business profile and respond to reviews directly through our platform.",
  },
];
---

<MainLayout>
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section
      class="relative h-screen flex items-center justify-center bg-gradient-to-br from-amber-50 to-orange-100"
    >
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute inset-0 bg-pattern opacity-10"></div>
      </div>

      <!-- Add two floating chickenburgers, one on the right and one on the left -->
      <!-- First chickenburger, mirrored -->
      <div
        class="absolute left-8 top-0 md:left-4 md:top-0 w-80 h-80 animate-float-2 transform -scale-x-100"
      >
        <img
          src="/chickenburger.png"
          alt="Delicious chickenburger"
          class="w-full h-full object-contain transform"
        />
      </div>
      <div
        class="hidden md:block absolute right-0 -top-5 w-72 h-72 animate-float"
      >
        <img
          src="/chickenburger.png"
          alt="Delicious chickenburger"
          class="w-full h-full object-contain transform"
        />
      </div>
      <!-- Third and fourth small chickenburgers, mirrored -->
      <div
        class="absolute hidden md:block right-60 top-64 w-20 h-20 animate-float-2 transform -scale-x-100"
      >
        <img
          src="/chickenburger.png"
          alt="Delicious chickenburger"
          class="w-full h-full object-contain transform"
        />
      </div>
      <div
        class="absolute hidden md:block left-60 top-56 w-20 h-20 animate-float transform -scale-x-100 rotate-[-31deg]"
      >
        <img
          src="/chickenburger.png"
          alt="Delicious chickenburger"
          class="w-full h-full object-contain transform"
        />
      </div>
      <div class="container mx-auto px-4 text-center relative z-10">
        <h1
          class="text-4xl md:text-7xl font-bold mb-6 text-amber-900 animate-fade-in"
        >
          Welcome to <span class="text-orange-500">Chickenburger Scout</span>
        </h1>
        <p class="text-xl md:text-2xl text-amber-800 mb-8 max-w-2xl mx-auto">
          Your trusted guide to discovering and rating the best chickenburgers
          in your area!
        </p>
        <div class="flex justify-center gap-4">
          <a href="https://app.chickenburgerscout.com/" class="btn-primary">
            Start Scouting
          </a>
          <a href="#features" class="btn-secondary"> Learn More </a>
        </div>
      </div>

      <div
        class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce"
      >
        <svg
          class="w-6 h-6 text-amber-900"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-16 text-amber-900">
          How It Works
        </h2>

        <div class="grid md:grid-cols-3 gap-8">
          <div class="feature-card">
            <div class="icon-wrapper">
              <svg
                class="w-8 h-8"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Find Locations</h3>
            <p>
              Discover chickenburger spots near you using our interactive map
              interface.
            </p>
          </div>

          <div class="feature-card">
            <div class="icon-wrapper">
              <svg
                class="w-8 h-8"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Rate & Review</h3>
            <p>
              Rate chickenburgers on a scale of 1-10 chickens and share your
              experience.
            </p>
          </div>

          <div class="feature-card">
            <div class="icon-wrapper">
              <svg
                class="w-8 h-8"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Share & Discover</h3>
            <p>
              Connect with fellow food lovers and discover new favorite spots.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Popular Spots Section -->
    <section class="py-20 bg-amber-50">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-16 text-amber-900">
          Popular Chickenburger Spots
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {
            Array.from({ length: 6 }).map((_, i) => (
              <article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                <div class="aspect-w-16 aspect-h-9 bg-amber-200">
                  <img
                    src={`https://picsum.photos/seed/${i}/400/225`}
                    alt="Restaurant preview"
                    class="object-cover w-full h-full"
                  />
                </div>
                <div class="p-6">
                  <h3 class="text-xl font-semibold mb-2">
                    Awesome Chickenburger #{i + 1}
                  </h3>
                  <div class="flex items-center mb-3">
                    <div class="flex text-amber-500">
                      {Array.from({ length: 5 }).map(() => (
                        <svg
                          class="w-5 h-5"
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                      ))}
                    </div>
                    <span class="ml-2 text-gray-600">(150+ ratings)</span>
                  </div>
                  <p class="text-gray-600 mb-4">
                    Famous for their crispy chicken and special sauce. A
                    must-try spot for chickenburger enthusiasts.
                  </p>
                  <div class="flex items-center text-sm text-gray-500">
                    <svg
                      class="w-4 h-4 mr-1"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                      />
                    </svg>
                    Downtown Area
                  </div>
                </div>
              </article>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-16 text-amber-900">
          What Our Users Say
        </h2>
        <div class="grid md:grid-cols-3 gap-8">
          {
            testimonials.map((testimonial) => (
              <div class="bg-amber-50 rounded-xl p-8">
                <div class="flex items-center mb-6">
                  <img
                    src={testimonial.image}
                    alt={testimonial.name}
                    class="w-12 h-12 rounded-full mr-4"
                  />
                  <div>
                    <h3 class="font-semibold text-lg">{testimonial.name}</h3>
                    <p class="text-amber-700">{testimonial.role}</p>
                  </div>
                </div>
                <p class="text-gray-700 italic">"{testimonial.text}"</p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Blog Section -->
    <section class="py-20 bg-amber-50">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-16 text-amber-900">
          Latest from Our Blog
        </h2>
        <div class="grid md:grid-cols-3 gap-8">
          {
            blogPosts.map((post) => (
              <article class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
                <div class="p-6">
                  <h3 class="text-xl font-semibold mb-3">{post.title}</h3>
                  <p class="text-gray-600 mb-4">{post.excerpt}</p>
                  <div class="flex items-center text-sm text-gray-500">
                    <time datetime={post.date}>
                      {new Date(post.date).toLocaleDateString("en-US", {
                        month: "long",
                        day: "numeric",
                        year: "numeric",
                      })}
                    </time>
                    <span class="mx-2">•</span>
                    <span>{post.readTime}</span>
                  </div>
                </div>
              </article>
            ))
          }
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-16 text-amber-900">
          Frequently Asked Questions
        </h2>
        <div class="max-w-3xl mx-auto">
          {
            faqs.map((faq) => (
              <div class="mb-8">
                <h3 class="text-xl font-semibold mb-3 text-amber-900">
                  {faq.question}
                </h3>
                <p class="text-gray-700">{faq.answer}</p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Newsletter Section -->
    <section class="py-20 bg-amber-50">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-4xl font-bold mb-8 text-amber-900">Stay Updated</h2>
        <p class="text-xl mb-8 max-w-2xl mx-auto text-gray-700">
          Get the latest chickenburger reviews, news, and special features
          delivered straight to your inbox!
        </p>
        <form class="max-w-md mx-auto">
          <div class="flex gap-4">
            <input
              type="email"
              placeholder="Enter your email"
              class="flex-1 px-4 py-3 rounded-full border-2 border-amber-200 focus:border-amber-500 focus:outline-none"
            />
            <button
              type="submit"
              class="px-8 py-3 bg-amber-500 text-white font-semibold rounded-full hover:bg-amber-600 transition-colors duration-200"
            >
              Subscribe
            </button>
          </div>
        </form>
      </div>
    </section>

    <!-- CTA Section -->
    <section
      class="py-20 bg-gradient-to-br from-orange-500 to-amber-600 text-white"
    >
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-4xl font-bold mb-8">
          Ready to Scout Some Chickenburgers?
        </h2>
        <p class="text-xl mb-8 max-w-2xl mx-auto">
          Join our growing community of food scouts and help others discover the
          best chickenburgers around!
        </p>
        <a href="https://app.chickenburgerscout.com/" class="btn-white">
          Start Scouting Now
        </a>
      </div>
    </section>
  </main>
</MainLayout>
