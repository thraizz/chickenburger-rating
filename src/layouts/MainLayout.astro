---
import "../styles/global.css";
const {
  title = "Chickenburger Scout - Discover and Rate the Best Chickenburgers",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/mousepointer.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title}</title>
    <meta
      name="description"
      content="Discover and rate the best chickenburgers in your area with Chickenburger Scout. Join our community of food enthusiasts and share your experiences!"
    />
    <meta
      name="keywords"
      content="chickenburger, scout, rating, food, restaurant, review, community"
    />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Discover and rate the best chickenburgers in your area with Chickenburger Scout"
    />
    <meta property="og:type" content="website" />

    <style is:global>
      body {
        font-family: "Inter", sans-serif;
      }
    </style>

    <script
      defer
      data-domain="chickenburgerscout.com"
      src="https://plausible.io/js/script.js"></script>
  </head>
  <body class="antialiased">
    <slot />
    <footer class="bg-gray-100 mt-auto py-8">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-lg font-semibold mb-4">About Us</h3>
            <p class="text-gray-600">
              Discover and rate the best chickenburgers in your area. Join our
              community of food enthusiasts!
            </p>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
            <ul class="space-y-2">
              <li>
                <a href="/" class="text-gray-600 hover:text-gray-900">Home</a>
              </li>
              <li>
                <a href="/ratings" class="text-gray-600 hover:text-gray-900"
                  >Latest Ratings</a
                >
              </li>
              <li>
                <a href="/about" class="text-gray-600 hover:text-gray-900"
                  >About</a
                >
              </li>
            </ul>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-4">Contact</h3>
            <p class="text-gray-600">Questions or feedback?</p>
            <a
              href="mailto:contact@chickenburgerscout.com"
              class="text-blue-600 hover:text-blue-800"
              >contact@chickenburgerscout.com</a
            >
          </div>
        </div>
        <div class="mt-8 pt-8 border-t border-gray-200">
          <p class="text-center text-gray-500">
            &copy; {new Date().getFullYear()} Chickenburger Scout. All rights reserved.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
